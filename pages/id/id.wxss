page{
  background: #f2f2f2;
}
.idtitle {
  background: #f2f2f2;
  color: #999999;
  padding: 30rpx;
}
.idline {
  display: block;
  font-size: 25rpx;
}
/*上传照片*/
.upimgbox {
  font-size: 30rpx;
  padding:40rpx;
  padding-bottom: 0;
  background: #fff;
  clear: both;
  overflow: hidden;
}
.upimgbox textarea {
  height: 200rpx;
  border: 1px solid #ccc;
  width: 100%
}
.upimgbox2 {
  font-size: 30rpx;
  padding:40rpx;
  padding-top:20rpx;
  background: #fff;
  clear: both;
  overflow: hidden;
}
.add {
  width: 100rpx;
  height: 100rpx;
  border-radius:10rpx;
  border:2px solid #ccc;
  float: left
}
.add image {
  width: 100%;
  height: 100%
}
.imgtitle {
  padding-bottom:20rpx
}
.weui-uploader__file {
  float: left;
  margin-left: 10rpx;
}
.weui-uploader__file image{
  width: 108rpx;
  height: 108rpx;
}
/*底部菜单*/
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}
.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}
.userinfo-nickname {
  color: #aaa;
}
.usermotto {
  margin-top: 200px;
}
.gofrom {
  background: #ff93ba;
  color:#fff;
  font-size: 34rpx;
  border-radius: 0;
  margin:30rpx;
}
.region {
  background: #fff;
  border: 1px solid #ccc;
}
