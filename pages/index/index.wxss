/*我添加的*/
.topimg {
  width: 100%;
}
.menubox {
  display:flex;
  box-orient:horizontal;
  width: 100%;
}
.menubox .iconbox {
  width: 33%;
  text-align: center;
  font-size: 12px
}
.menubox .iconbox image {
  width: 100%;
  height: 100%;
  display: block;
  margin: 10px auto;
}

/*scroll menu*/
.scrollmenubox {
  height: 60rpx;
}
.scrollbox{
  white-space: nowrap;
}
.scrolllink{
  display: inline-block;
  width: 25%;
  height: 60rpx;
  font-size: 28rpx;
  line-height: 60rpx;
  text-align: center;
  color: #999;
}
.add {
  float: right;
  width: 10%;
  height: 60rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center; /*垂直居中*/
  text-align: center;
}
.add image{
  width: 20px;
  height: 20px;
}

/*news*/
.newsbox {
  clear:both;
  overflow: hidden;
  margin: 20rpx 30rpx;
  border:1px solid #eee;
  padding: 10rpx;
}
.newsbox .floatleft{
  float: left;
  width: 25%;
}

.newsbox .floatleft image {
  width: 100%;
  height: 150rpx;
}
.newsbox .floatright {
  float: right;
  width: 75%;
  box-sizing: border-box;
  padding-left: 10rpx;
}
.newtitle {
  font-size: 28rpx;
  color:#333;
  margin-bottom: 10rpx;
}
.newtext {
  font-size: 24rpx;
  color: #999;
}

/*content*/
.contentbox {
  padding:30rpx;
}
.contentbox image {
  width: 100%;
  height: 220rpx;
}
.contenttitle {
  font-size: 28rpx;
  color:#333;
  height: 70rpx;
  line-height: 60rpx;
  border-bottom: 1rpx solid #ccc;
  margin-bottom: 30rpx
}
.contenttext{
  font-size: 24rpx; 
  color:#999;
  text-indent: 2em;
  margin-bottom: 20rpx;
}

.islogin {
  font-size: 28rpx;
  color: #999;
  height:28rpx;
  background: #fff;
  margin-top: 10rpx;
  text-align: center;
  padding-bottom: 40rpx;
  position: absolute;
  width: 100%;
  bottom: 0;
}