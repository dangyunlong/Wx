.login_info{
  z-index: 999;
  position:absolute;
}
.login_form{
  border-radius:5px;
  margin-left:8%;
  background-color: rgba(255,255,255,0.2);
}
.iconimg {
  margin:0 auto;
  width: 80px;
  height: 80px;
  border-radius: 50%;
}
.weui-label {
  font-size: 36rpx;
  color:#333;
}
.weui-input {
  font-size: 28rpx;
  border-radius: 5px;
  border:1px solid #ccc;
  padding:10rpx;
  margin-top: 10rpx;
  margin-bottom:10rpx;
  background: #fff;
}
.weui-btn-area {
  margin-top:30rpx
}
.weui-toptips {
  font-size: 30rpx;
  color: #fff;
  background: red;
  text-align: center;
  position: absolute;
  overflow: hidden;
  width: 100%;
  height: 0;
}
.weuiline {
  font-size: 28rpx;
  height:40rpx;
  margin-bottom: 20rpx;
  color:#666;
}
.weuiline navigator {
  display: inline-block;
  color: #46a3ff;
}
input::-webkit-input-placeholder, textarea::-webkit-input-placeholder {   
 /* WebKit browsers */   
color: #666;   
}   
input:-moz-placeholder, textarea:-moz-placeholder {   
/* Mozilla Firefox 4 to 18 */   
color: #666;   
}   
input::-moz-placeholder, textarea::-moz-placeholder {   
 /* Mozilla Firefox 19+ */   
color: #666;   
}   
input:-ms-input-placeholder, textarea:-ms-input-placeholder {   
 /* Internet Explorer 10+ */   
color: #666;   
} 
.weuiline-img {
  font-size: 28rpx;
  height:70rpx;
  margin-bottom: 20rpx;
  color:#666;
}
.weuiline-img image{
  width:60rpx;
  height: 60rpx;
  border-radius: 50%;
  margin-right: 10rpx;
  margin-top: 10rpx;
}
.loginstate {
  position: absolute;
  top:300rpx;
  text-align: center;
  font-size: 28rpx;
  color: #999;
}
